<% if @user %>
<% provide(:title, @user.username) %>
<aside>
  <section>
    <h1>
      <%= gravatar_for @user %>
      <%= @user.username %>
    </h1>
    <%= link_to "Edit Profile!", edit_user_path(@user) %>
  <% if @user.goals.any? %>
  <h3 class="goals"><%=@user.username%>'s Goals</h3>
  <ul>
  <% @goals.each do |goal| %>
    <li><span><%=goal.exercise.name%></span> <span><%=goal.reps%></span>
    <span><%=goal.weight%></span></li>
  <%end %>
  </ul>
<%end%>
<% else %>
    <div class="error">
      <p> No users found sorry!</p>
    </div>
  </section>
</aside>
<% end %>