<h1>All User Goals</h1>

<% form_tag exercises_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<p><%= link_to "Add Goal", new_goal_path, method: :get %></p>

<% if @goals %>
<%= render "/Partial/goal_list" %>
<%= will_paginate @goals %>
<% end %>