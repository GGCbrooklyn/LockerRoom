<h1>My Goals</h1>

<% form_tag exercises_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<p><%= link_to "Add Goal", new_goal_path, method: :get %></p>

<%= will_paginate %>
<% @goals.each do |goal| %>
	<div class="goal-box">

		Exercise: <%= goal.exercise_id %><br>
		Reps: <%= goal.reps %><br>
		Weight: <%= goal.weight %><br>
		User ID: <%= goal.user_id %><br>
		<%= link_to "Edit", edit_goal_path(goal.id) %>
		<%= link_to "Delete", goal, method: :delete, class: 'delete' %>
	</div>
	<br>
<% end %>		