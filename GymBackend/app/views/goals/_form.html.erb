<%= form_for(@goal) do |f| %>

	<%= f.label :goal %><br>
	<%= f.collection_select(:exercise_id, @exercises.order('name ASC'), :id, :name, :include_blank => "Please Select") %>

    <%= f.text_field :reps, placeholder: 'Reps' %><br>
   	<%= f.text_field :weight, placeholder: 'Weight' %><br>
   	<%= f.submit %>

<% end %>
